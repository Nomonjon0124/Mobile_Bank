<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/white">

    <TextView
        android:layout_width="246dp"
        android:layout_height="29.74dp"
        android:layout_gravity="center|top"
        android:layout_marginTop="19.82dp"
        android:gravity="center"
        android:textSize="24sp"
        android:text="Sign up" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="16sp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="30dp"
        android:gravity="center"
        android:text="Phone number" />

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_marginTop="5dp"
            android:layout_marginHorizontal="30sp"
            android:layout_height="wrap_content"
            android:gravity="center|start"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
            >
            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:id="@+id/name_et"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                tools:ignore="TouchTargetSizeCheck"/>
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="16sp"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:layout_marginLeft="30dp"
            android:text="Last name" />

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_marginTop="5dp"
        android:layout_marginHorizontal="30dp"
        android:layout_height="wrap_content"
        android:gravity="center|start"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        >
        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:id="@+id/fam_et"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            tools:ignore="TouchTargetSizeCheck"/>
    </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="16sp"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:layout_marginLeft="30dp"
            android:text="Data of birth" />

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_marginTop="5dp"
        android:layout_marginHorizontal="30dp"
        android:layout_height="wrap_content"
        android:gravity="center|start"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        >
        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:id="@+id/data_of_birdh_et"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            tools:ignore="TouchTargetSizeCheck"/>
    </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="16sp"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:layout_marginLeft="30dp"
            android:text="Phone number" />
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_marginTop="5dp"
        android:layout_marginHorizontal="30dp"
        android:layout_height="wrap_content"
        android:gravity="center|start"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        >
        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:id="@+id/phone"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            tools:ignore="TouchTargetSizeCheck"/>
    </com.google.android.material.textfield.TextInputLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="16sp"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:layout_marginLeft="30dp"
            android:text="Password" />

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_marginTop="5dp"
        android:layout_marginHorizontal="30dp"
        android:layout_height="wrap_content"
        android:gravity="center|start"
        app:counterEnabled="true"
        app:counterMaxLength="8"
        app:passwordToggleEnabled="true"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        >
        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:id="@+id/password"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            tools:ignore="TouchTargetSizeCheck"/>
    </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="16sp"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:layout_marginLeft="35dp"
            android:text="Gander" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="8dp">

            <CheckBox
                android:id="@+id/famalebox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                 />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="18dp"
                android:layout_gravity="center"
                android:layout_marginStart="5dp"
                android:text="male" />

            <Space
                android:layout_width="50dp"
                android:layout_height="0dp" />

            <CheckBox
                android:id="@+id/malebox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="18dp"
                android:layout_gravity="center"
                android:layout_marginStart="5dp"
                android:text="famale" />
        </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center"
        android:gravity="center"
        android:background="@color/white">
        <androidx.cardview.widget.CardView
            android:layout_width="328dp"
            android:layout_height="48dp"
            android:layout_marginBottom="16dp"
            android:elevation="22dp"
            android:layout_marginTop="10dp"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/naxt"
                android:orientation="vertical"
                android:background="#99CFCFCF"/>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
    </LinearLayout>


