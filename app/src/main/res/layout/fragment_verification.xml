<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageButton
        android:id="@+id/back"
        android:layout_width="10dp"
        android:layout_height="20dp"
        app:layout_constraintTop_toTopOf="@id/txt"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/txt"
        android:background="@drawable/back"
        android:layout_marginLeft="29dp"

        />
    <TextView
        android:id="@+id/txt"
        android:layout_width="195dp"
        android:layout_height="48dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="16dp"
        android:text="Потвердите"
        android:gravity="center"
        android:textSize="30dp"
        android:textStyle="bold"
        />
    <TextView
        android:layout_width="176dp"
        android:layout_height="22dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textSize="14sp"
        android:text="Код отправлен на номер"
        android:layout_marginTop="104dp"
        />
    <TextView
        android:layout_width="130dp"
        android:layout_height="22dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textSize="14sp"
        android:text="+998 90 000 90 90"
        android:layout_marginTop="124dp"
        />
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="280dp"
        android:layout_height="80dp"
        android:layout_marginTop="170dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/pincodeError"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        >
        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:id="@+id/input_code"
            android:layout_height="match_parent"
            android:inputType="number"
            android:gravity="center"
            android:textSize="18sp"
            android:hint="123456"
            />
    </com.google.android.material.textfield.TextInputLayout>
    <TextView
        android:layout_width="156dp"
        android:layout_height="22dp"
        android:id="@+id/resend"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="260dp"
        android:textSize="14sp"
        android:text="resend code 00:45"
        />
    <LinearLayout
        android:id="@+id/pincodecheak"
        android:layout_width="328dp"
        android:layout_height="48dp"
        android:clickable="true"
        android:focusable="true"
        android:background="#99CFCFCF"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="332dp"
        android:orientation="horizontal" />



</androidx.constraintlayout.widget.ConstraintLayout>