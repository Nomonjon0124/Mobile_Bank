<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageButton
        android:id="@+id/back"
        android:layout_width="13dp"
        android:layout_height="17dp"
        app:layout_constraintTop_toTopOf="@id/txt"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/txt"
        android:background="@drawable/back"
        android:layout_marginLeft="29dp"

        />
    <TextView
        android:id="@+id/txt"
        android:layout_width="195dp"
        android:layout_height="48dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="16dp"
        android:text="Потвердите"
        android:textColor="@color/black"

        android:gravity="center"
        android:textSize="30dp"
        android:textStyle="normal"
        android:fontFamily="sans-serif-medium"
        />
    <TextView
        android:layout_width="176dp"
        android:layout_height="22dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textSize="14sp"
        android:textColor="@color/black"
        android:textStyle="normal"
        android:fontFamily="sans-serif-medium"
        android:text="Код отправлен на номер"
        android:layout_marginTop="104dp"
        />
    <TextView
        android:layout_width="130dp"
        android:layout_height="22dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textSize="14sp"
        android:text="+998 90 000 90 90"
        android:textStyle="normal"
        android:fontFamily="sans-serif-medium"
        android:layout_marginTop="124dp"
        />
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="280dp"
        android:layout_height="80dp"
        android:layout_marginTop="170dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/pincodeError"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        >
        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:id="@+id/input_code"
            android:layout_height="match_parent"
            android:inputType="number"
            android:gravity="center"
            android:textSize="18sp"
            android:textStyle="normal"
            android:fontFamily="sans-serif-medium"
            android:hint="123456"
            />
    </com.google.android.material.textfield.TextInputLayout>
    <TextView
        android:layout_width="156dp"
        android:layout_height="22dp"
        android:id="@+id/resend"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="260dp"
        android:textSize="14sp"
        android:textStyle="normal"
        android:fontFamily="sans-serif-medium"
        android:text="resend code 00:45"
        />
    <androidx.cardview.widget.CardView
        android:layout_width="328dp"
        android:layout_height="60dp"
        android:clickable="true"
        android:focusable="true"
        android:background="#2979FF"
        app:cardCornerRadius="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="332dp"
        >
        <LinearLayout
            android:id="@+id/pincodech"
            android:layout_width="328dp"
            android:layout_height="match_parent"
            android:clickable="true"
            android:focusable="true"
            android:layout_gravity="center"
            android:gravity="center"
            android:background="#2979FF"
            android:orientation="horizontal" >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="normal"
                android:fontFamily="sans-serif-medium"
                android:textSize="28sp"
                android:text="next"
                android:textColor="#FBFBFB"
                />
        </LinearLayout>
    </androidx.cardview.widget.CardView>




</androidx.constraintlayout.widget.ConstraintLayout>